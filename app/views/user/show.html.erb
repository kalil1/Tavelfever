
<div class="user-show">

<div class="container">
<div class="row">



  <div class="col s12 m6">
    <% if current_user.checklists.count == 0  %>
      <h2>You haven't taken any trips</h2>
    <% else  %>
      <div id="list" class="">
        <h4><%= current_user.checklists.last.list_name %> - <%= current_user.checklists.last.destination %></h4> <br>
        <ul class="collapsible" data-collapsible="accordion">
          <li>
            <div class="collapsible-header"><i class="far fa-file"></i>Documents</div>
            <div class="collapsible-body" id="pp" >
              <% @document.each do |item| %>
              <span> <%= item %> <br> </span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="collapsible-header"><i class="fas fa-suitcase"></i>Basics</div>
            <div class="collapsible-body" id="pp" >
              <% @basics.each do |item| %>
              <span> <%= item %> <br> </span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="collapsible-header"><i class="fas fa-shower"></i> Toiletry</div>
            <div class="collapsible-body" id="pp" >
              <% @toiletry.each do |item| %>
              <span> <%= item %> <br> </span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="collapsible-header"><i class="fas fa-fire"></i> Activites </div>

            <div class="collapsible-body" id="pp" >
              <% current_user.checklists.last.items.each do |item| %>
              <span><%= item.iname %>  </span>
              <% current_user.checklists.last.useritems.each do |item| %>
              <span><%= item.iname %>  </span>
              <!-- Modal Trigger -->
              <% end %>
              <% end %>
              <a data-target="modal1" class="waves-effect waves-light btn modal-trigger"
              href="#modal1">Expand</a>

<!-- Modal Structure -->
            </div>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col s12 m6">
        <h4><i class="material-icons">filter_drama</i> Weather Forecast</h4>
        <div id="pop" class="card-panel yellow darken-3">
          <div class="row">
          <div class="col s6 "><span class="flow-text"> <img class="pnx" src="http://openweathermap.org/img/w/<%= @icon %>.png" alt=""> </span></div>
      <div class="col s6 "><span class="white-text">Temp: <%= @temp.round %></span>
      <span class="white-text">Forecast:  <%= @description.capitalize %> </span>
    <span class="white-text">Wind Speed:  <%= @wind %> </span> <br>
  <span class="white-text">Humidity:  <%= @humidity %> </span> </div>
        </div>
        </div>



      <div id="time-box"  class="card-panel  yellow darken-3">
        <h6> Your Trip Starts In -</h6> <h6 id="demo" ></h6>
      </div>

  </div>

<br>
